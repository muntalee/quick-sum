{
  "name": "Quick Sum",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Summarize webpages using AI into clean and concise text.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
    // "default_icon": {
    //   "16": "images/icon16.png",
    //   "48": "images/icon48.png",
    //   "128": "images/icon128.png"
    // }
  },
  // "icons": {
  //   "16": "images/icon16.png",
  //   "48": "images/icon48.png",
  //   "128": "images/icon128.png"
  // },
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}